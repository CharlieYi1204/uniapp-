.blockdetail-box {
  padding: 20rpx 20rpx;
}
.blockdetail-box .sendpost {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 50%;
  position: fixed;
  z-index: 9999;
  right: 20rpx;
  bottom: 100rpx;
  -webkit-transform: rotate(0deg);
          transform: rotate(0deg);
  transition: -webkit-transform 0.5s ease;
  transition: transform 0.5s ease;
  transition: transform 0.5s ease, -webkit-transform 0.5s ease;
}
.blockdetail-box .sendpost image {
  width: 100%;
  height: 100%;
}
.blockdetail-box .sendpostActive {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.blockdetail-box .block-title {
  width: 100%;
  display: flex;
  border-radius: 20rpx;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx 30rpx;
}
.blockdetail-box .block-title .title-left {
  display: flex;
  flex: 1;
}
.blockdetail-box .block-title .title-left .blocktext {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 20rpx;
}
.blockdetail-box .block-title .title-left .blocktext .info-box {
  display: flex;
}
.blockdetail-box .block-title .title-left .blocktext .block-name {
  font-size: 40rpx;
  font-weight: bold;
}
.blockdetail-box .block-title .title-left .blocktext .block-notice {
  margin-top: 15rpx;
  padding: 15rpx 15rpx;
  background-color: #eee;
  width: 100%;
  color: #888;
  font-size: 20rpx;
  border-radius: 20rpx;
}
.blockdetail-box .sticky-box {
  background-color: #fff;
  padding: 30rpx 30rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.blockdetail-box .sticky-box .sticky-title {
  font-weight: bold;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.blockdetail-box .sticky-box .sticky-row {
  display: flex;
  padding: 10rpx 0rpx;
  align-items: center;
}
.blockdetail-box .sticky-box .sticky-row .sticky-icon {
  padding-left: 5rpx;
  width: 50rpx;
  height: 50rpx;
}
.blockdetail-box .sticky-box .sticky-row .sticky-icon image {
  width: 100%;
  height: 100%;
}
.blockdetail-box .sticky-box .sticky-row .post-title {
  padding-left: 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

